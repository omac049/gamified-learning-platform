{
  "name": "gamified-learning-platform",
  "version": "1.0.0",
  "description": "6-Week Interactive Educational Platform for 3rd Grade Review",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "lint:summary": "eslint . --ext .js,.jsx --format=compact",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "audit:security": "npm audit --audit-level=moderate",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "babel-jest": "^30.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^6.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "semantic-release": "^24.2.5",
    "vite": "^5.1.6"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "keywords": [
    "education",
    "games",
    "learning",
    "phaser",
    "javascript"
  ],
  "author": "Learning Quest Academy",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@packages/(.*)$": "<rootDir>/packages/$1",
      "^@core/(.*)$": "<rootDir>/packages/core/$1",
      "^@scenes/(.*)$": "<rootDir>/packages/scenes/$1",
      "^@gameobjects/(.*)$": "<rootDir>/packages/gameobjects/$1",
      "^@utils/(.*)$": "<rootDir>/packages/utils/$1",
      "^@shared/(.*)$": "<rootDir>/packages/shared/$1"
    },
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/**/index.js",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "globals": {
      "Phaser": "readonly"
    }
  }
}
